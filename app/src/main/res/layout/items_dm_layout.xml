<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/light_gray"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/dm_received_layout"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_layout_dm_received"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dm_received_text"
            tools:text="You are good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/dm_received_layout"
        android:id="@+id/dm_sent_layout"
        android:padding="10dp"
        android:background="@drawable/round_layout_dm_sent"
        android:layout_width="270dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dm_sent_text"
            tools:text="You are good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>